NODE_ENV=production
PORT=5000
# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# S3 / MinIO Configuration
S3_ENDPOINT=https://your-production-s3-endpoint.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-production-access-key
S3_SECRET_ACCESS_KEY=your-production-secret-key
S3_BUCKET_NAME=protolab-files-prod
S3_USE_SSL=true

# CORS - Change to your production domain
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HTTPS_ENABLED=true
HELMET_ENABLED=true
CSRF_PROTECTION=true
