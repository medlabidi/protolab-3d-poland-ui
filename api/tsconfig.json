{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
