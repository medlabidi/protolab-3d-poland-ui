# ProtoLab 3D Poland - Environment Variables for Vercel Deployment

# ===========================================
# REQUIRED - Database Configuration
# ===========================================
DATABASE_URL=your_supabase_or_mongodb_connection_string
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# REQUIRED - JWT Authentication
# ===========================================
JWT_ACCESS_SECRET=your_strong_random_secret_for_access_tokens
JWT_REFRESH_SECRET=your_strong_random_secret_for_refresh_tokens
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# REQUIRED - Email Service (Resend)
# ===========================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# OPTIONAL - AWS S3 (for file uploads)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# ===========================================
# REQUIRED - Application URLs
# ===========================================
# This will be your Vercel URL (e.g., https://protolab-3d-poland.vercel.app)
FRONTEND_URL=https://your-app.vercel.app
CORS_ORIGIN=https://your-app.vercel.app

# ===========================================
# OPTIONAL - Node Environment
# ===========================================
NODE_ENV=production
